{
	"manifest_version": 2,

	"name": "einthusan.com monitor",
	"description": "This extension monitors einthusan.com for new movies available.",
	"version": "1.0",

	"browser_action": 
	{
   "default_icon": "icon.png",
   "default_popup": "popup.html"
   },

   "background": 
   {
    "scripts": ["background.js"]
    },

    "permissions": ["tabs",
    "cookies",
    "https://www.einthusan.com/", 
    "http://www.einthusan.com/"]
  }